<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".media.MediaActivity">

    <Button
        android:onClick="btn_separate_audio_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="音频和视频的分离"
        android:textAllCaps="false" />

    <Button
        android:onClick="btn_separate_audio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="纯音频分离"
        android:textAllCaps="false" />

    <Button
        android:onClick="btn_separate_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="纯视频的分离"
        android:textAllCaps="false" />

    <Button
        android:onClick="btn_synthesis_audio_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="音频和视频的合成"
        android:textAllCaps="false" />

</LinearLayout>